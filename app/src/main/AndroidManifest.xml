<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mylibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/library_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/library_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WebsiteActivity"
            android:label="@string/website"/>
        <activity android:name=".FavouritesActivity"
            android:label="@string/favourite_books"/>
        <activity android:name=".WishlistActivity"
            android:label="@string/wishlist"/>
        <activity android:name=".CurrentlyReadingBooksActivity"
            android:label="@string/currently_reading_books"/>
        <activity android:name=".AlreadyReadBooksActivity"
            android:label="@string/already_read_books"/>
        <activity android:name=".BookActivity"
            android:label="@string/book"/>
        <activity android:name=".ShowAllActivity"
            android:label="@string/all_books"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>